@model IEnumerable<LibraryAssignment.Models.CustomerBookList>

@{
    ViewData["Title"] = "BookedBooksSingleCustomer";
}

<h1 class="pageTitles">Customer-Search</h1>

<div class="setScrollCustomerBookList">
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Customers)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Books)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Retrieved)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartBookedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndBookedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Returned)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Customers.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Books.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Retrieved)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartBookedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndBookedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Returned)
                </td>
                <td class="tableBtnBox">
                    <a class="tableBtn"  asp-action="Edit" asp-route-id="@item.CustomerBookListID">Edit</a> |
                    <a class="tableBtn"  asp-action="Details" asp-route-id="@item.CustomerBookListID">Details</a> |
                    <a class="tableBtn"  asp-action="Delete" asp-route-id="@item.CustomerBookListID">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>

<hr />
<a class="btnLinks" asp-action="Index">Back to List</a>