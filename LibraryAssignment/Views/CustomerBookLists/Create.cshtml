@model LibraryAssignment.Models.CustomerBookList

@{
    ViewData["Title"] = "Create";
}

<h1 class="pageTitles">Add New Booking</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FK_CustomerID" class="control-label"></label>
                <select asp-for="FK_CustomerID" class ="form-control" asp-items="ViewBag.FK_CustomerID"></select>
                <span asp-validation-for="FK_CustomerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FK_BookID" class="control-label"></label>
                <select asp-for="FK_BookID" class ="form-control" asp-items="ViewBag.FK_BookID"></select>
                <span asp-validation-for="FK_BookID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Retrieved" class="control-label"></label>
                <div class="form-check">
                    <input type="radio" asp-for="Retrieved" class="form-check-input" value="True" required />
                    <label class="form-check-label">True</label>
                </div>
                <div class="form-check">
                    <input type="radio" asp-for="Retrieved" class="form-check-input" value="False" required />
                    <label class="form-check-label">False</label>
                </div>
                <span asp-validation-for="Retrieved" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StartBookedDate" class="control-label"></label>
                <input asp-for="StartBookedDate" class="form-control" required/>
                <span asp-validation-for="StartBookedDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EndBookedDate" class="control-label"></label>
                <input asp-for="EndBookedDate" class="form-control" required/>
                <span asp-validation-for="EndBookedDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<hr />
<div>
    <a class="btnLinks" asp-action="Index">Back to List</a>
</div>

